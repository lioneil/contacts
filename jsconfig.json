{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "checkJs": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "app/*"
      ],
      "@utils/*": [
        "app/utils/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "app/**/*"
  ]
}
